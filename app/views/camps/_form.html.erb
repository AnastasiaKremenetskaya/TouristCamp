<%= form_with(model: camp, local: true) do |form| %>
  <% if camp.errors.any? %>
    <div class="layout-content">
      <div class="layout-content-body">

        <div id="error_explanation">
          <h2><%= pluralize(camp.errors.count, "error") %> Сохранение невозможо по причине:</h2>
          <ul>
            <% camp.errors.full_messages.each do |message| %>
              <li class="alert-link"><%= message %></li>
            <% end %>
          </ul>
        </div>
  <% end %>
  </div>
  </div>

<% end %>
