<% content_for :content do %>
  <% unless notice.nil? %>
    <div class="alert alert-success">
      <p class="alert-link"><%= notice %></p>
    </div>
  <% end %>
  <div class="layout-content">
    <div class="layout-content-body">
      <div class="title-bar">
        <h1 class="title-bar-title">
          <span class="d-ib">Города</span>
        </h1>
      </div>
      <%= link_to 'Добавить город', new_city_path, :class => "btn btn-primary btn-lg btn-warning" %>
      <div class="row">
        <div class="col-xs-12">
          <div class="panel">
            <div class="panel-body">
              <div class="table-responsive">
                <table id="demo-dynamic-tables-1" class="table table-middle nowrap">
                  <thead>
                  <tr>
                    <th>
                      #
                    </th>
                    <th>Название города</th>
                    <th>Регион</th>
                    <th>Дата создания</th>
                    <th>Дата изменения</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @cities.each_with_index do |city, index| %>
                    <td>
                      <%= index+1 %>
                    </td>
                    <td>
                      <strong><%= city.name %></strong>
                    </td>
                    <td>
                      <strong><%= city.region.name + ' (' +city.region.country.name+')'%></strong>
                    </td>
                    <td class="maw-320">
                      <%= city.created_at %>
                    </td>
                    <td>
                      <%= city.updated_at %>
                    </td>
                    <td>
                      <div class="btn-group pull-right dropdown">
                        <button class="btn btn-link link-muted" aria-haspopup="true"
                                data-toggle="dropdown" type="button">
                          <span class="icon icon-ellipsis-h icon-lg icon-fw"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right">
                          <li>
                            <%= link_to 'Изменить', edit_city_path(city) %>
                          </li>
                          <li>
                            <%= link_to 'Удалить', city, method: :delete, data: {confirm: 'Are you sure?'} %>
                          </li>
                        </ul>
                      </div>
                    </td>
                    </tr>
                  <% end -%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>
<%= render template: "layouts/application" %>